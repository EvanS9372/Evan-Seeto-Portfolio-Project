import components.random.Random;
import components.random.Random1L;
import components.set.Set;
import components.set.Set1L;
import components.simplewriter.SimpleWriter;
import components.simplewriter.SimpleWriter1L;
import components.simplereader.SimpleReader;
import components.simplereader.SimpleReader1L;
import java.util.Arrays;

 
/**
 *
 * @convention
 *
 *             
 *
 * @correspondence
 *
 *                 
 *
 * @author Evan Seeto
 *
 */
/**
 * Kernel interface for blackjack. contains all of the game elements and methods
 */
public interface BlackjackKernel extends Standard<Blackjack>

    /*
     * Private members --------------------------------------------------------
     */
    private String[] suits = {"Clubs", "Hearts", "Diamonds", "Spades"};
    private String[] vals = {"Ace", "2", "3", "4", "5", "6", "7", "8", "9", "Jack", "Queen", "King"};
    private Set<String> used = new Set1L<>();
    private int scoreDealer = 0;
    private int score = 0;
    private int norm = 50;
    private int bet;
    private int money = norm;
    private int drawnTot = 0; 

    /**
     * Representation of {@code this}.
     */
    
    /**
     * Creator of initial representation.
     */

    /**
     * Draws a card and adds the value of the card drawn to the player score by calling addScore
     *
     * @param player
     *            the player number. 0 for player, 1 for dealer.
     * @updates this.score or this.scoreDealer
     * @ensures #player's score + val = player's score
     * @requires player is either 1 or 0.
     * @returns the card suit and value
     */
    private String draw(int player);

    /**
     * adds the score of the card drawn to the player or dealer's score
     *
     * @param randV
     *             value of the card drawn.
     * @param player
     *            the player number. 0 for player, 1 for dealer.
     * @updates this.score or this.scoreDealer
     * @ensures #player's score + val = player's score
     * @requires player is either 1 or 0, and that randV is between 0 and 12.
     */
    private void addScore(string randV, int player);

    /**
     * prints the value of the money earned.
     *
     * @param out
     *            the console or output file to be written to
     * @returns this.money
     */
    public void money(SimpleWriter out);

    /**
     * resets the player's money to the default amount.
     *
     * @updates this.money
     * @ensures this.money = this.norm
     */
    public void refresh();

     /**
     * sets the default value of the player's money.
     *
     * @param x
     *            the new default amount of money 
     * @updates this.norm
     * @ensures this.norm = x
     */
    public void setMoney(int x);

    /**
     * sets the amount of money the player will bet
     *
     * @param out
     *            the file being written to.
     * @param in
     *            the file getting responses from.
     * @updates this.bet
     * @ensures this.bet is equal to the amount desired
     */
    public void bet(SimpleWriter out, SimpleReader in);
}
